<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aerodynamic Collection"
            android:textStyle="bold"
            app:autoSizeTextType="uniform"
            android:textColor="#515C6F"
            android:lines="1"
            android:textSize="28sp"
            android:id="@+id/header_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/header_seeAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            android:lines="1"
            android:textColor="#FF6969"
            android:text="SEE ALL"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/header_title"
            app:layout_constraintTop_toTopOf="@+id/header_title"/>

    <TextView
            android:layout_width="wrap_content"
            android:textColor="#515C6F"
            android:alpha="0.7"
            android:layout_height="wrap_content"
            android:text="The top of the line of aerodynamic products all in the same collection"
            android:textStyle="bold"
            app:autoSizeTextType="uniform"
            android:textSize="18sp"
            android:id="@+id/header_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_title"/>

    <LinearLayout android:layout_width="0dp"
                  app:layout_constraintTop_toBottomOf="@id/header_subtitle"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:gravity="center"
                  android:layout_height="170dp">

        <include
                android:layout_width="110dp"
                android:layout_height="160dp"
                layout="@layout/card_customcollection"/>

        <include
                android:layout_width="110dp"
                android:layout_height="160dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                layout="@layout/card_customcollection"/>

        <include
                android:layout_width="110dp"
                android:layout_height="160dp"
                layout="@layout/card_customcollection"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>